<%- include('partials/base.ejs') %>

<body>
  <div class="container mb-5">
    <div id="header-title" class="d-flex justify-content-center my-3 rounded">
      <h1 class="f-title">Search</h1>
    </div>
    <div  class="d-flex justify-content-start mb-3 ">
      <button id="queryBuilderBtn" class="btn btn-primary f-btn-col-1">Query Builder</button>
      <button id="goBackBtn" class="btn btn-secondary ms-2 f-btn-col-1">Go Back</button>
      <button id="exportToExcelBtn" class="btn btn-success ms-auto">Export to Excel</button>
      <button id="deleteAllBtn" class="btn btn-danger ms-2 f-btn-col-danger">Delete All Data</button>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div id="searchResults" class="mt-4"></div>
      </div>
    </div>
    <nav>
      <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
    </nav>
  </div>

  <!-- Query Builder Modal -->
  <div class="modal fade" id="queryBuilderModal" tabindex="-1" aria-labelledby="queryBuilderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="queryBuilderModalLabel">Query Builder</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="queryBuilderForm">
            <div id="queryContainer"></div>
            <div class="d-flex justify-content-start mb-3">
              <button type="button" class="btn btn-success me-2 f-btn-col-1" id="addQueryBtn">Add</button>
            </div>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-success" id="executeQueryBtn">Execute</button>
          <button type="button" class="btn btn-secondary f-btn-col-danger" data-bs-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.16.9/xlsx.full.min.js"></script>
<script src="/js/pages/search.js"></script>

<link rel="stylesheet" href="/css/pages/search.css">
<style>
  .form-group {
    margin-bottom: 1rem;
  }
</style>

